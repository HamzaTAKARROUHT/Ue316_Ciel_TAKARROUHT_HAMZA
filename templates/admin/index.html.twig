{% extends 'base.html.twig' %}

{% block title %}Hello Admin{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <h1>Hello Admin!</h1>
        </div>
        <div class="card-body">
            <p>Vous êtes connecté en tant que : {{ app.user.email }}</p>
            <a href="{{ path('app_logout') }}" class="btn btn-danger">Se déconnecter</a>
        </div>
    </div>
</div>
{% endblock %}